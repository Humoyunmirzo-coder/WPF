<UserControl x:Class="WPF.viuw.TexBox.TexBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.viuw.TexBox"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <TextBox  x:Name="txtimput" VerticalAlignment="Center" FontSize="16" FontWeight="Light"/>
        <TextBlock x:Name="Treblender" Text=" Hello All " FontSize="16" FontWeight="Light"
                   Foreground="DarkGray" VerticalAlignment="Center" Margin="5.0 "/>
        <Button x:Name="BtonClear" Width="30" HorizontalAlignment="Right" Content="X"
                Background="Transparent" Foreground="LightGray" BorderThickness="0"/>
    </Grid>
</UserControl>
